//check if global procedure exists
global proc whereIs(string $cmd)
{
	$path = `whatIs $cmd`;
	if ($path != "Unknown")
	{
		$path = substituteAllString($path,"Mel procedure found in: ","");
		$path = substituteAllString($path,"/","\\");
		print $path;
		$path = "explorer /select,\""+$path+"\"";
		system($path);
	}
	else
	{
		warning($cmd+": unknown command");
	}
}	



